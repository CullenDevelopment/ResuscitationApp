<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <EditText
            android:id="@+id/init_volume"
            android:layout_width="@dimen/default_box_width_large"
            android:layout_height="@dimen/default_box_height_large"
            android:layout_below="@id/fluids2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/quad_default_margin"
            android:layout_marginEnd="@dimen/quad_default_margin_large"
            android:layout_marginRight="@dimen/quad_default_margin_large"
            android:background="@color/white"
            android:gravity="center"
            android:hint="@string/volume"
            android:importantForAutofill="no"
            android:inputType="text|numberDecimal"
            android:textColor="@color/black"
            android:textColorHint="#78909C"
            android:textSize="@dimen/default_text_size_large" />

        <EditText
            android:id="@+id/hours"
            android:layout_width="@dimen/default_box_width_large"
            android:layout_height="@dimen/default_box_height_large"
            android:layout_below="@id/conversion"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/double_default_margin_large"
            android:layout_marginLeft="@dimen/double_default_margin_large"
            android:layout_marginTop="@dimen/double_default_margin"
            android:background="@color/white"
            android:gravity="center"
            android:hint="@string/time_hours"
            android:importantForAutofill="no"
            android:inputType="text|numberDecimal"
            android:textColor="@color/black"
            android:textColorHint="#78909C"
            android:textSize="@dimen/default_text_size_large"
            tools:ignore="DuplicateSpeakableTextCheck" />


        <ImageView
            android:id="@+id/convert_fluid_volume"
            android:layout_width="@dimen/menu_button_size_large"
            android:layout_height="@dimen/menu_button_size_large"
            android:layout_below="@id/conversion"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/quad_default_margin_large"
            android:layout_marginLeft="@dimen/quad_default_margin_large"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/double_default_margin"
            android:clickable="true"
            android:contentDescription="@string/convert_f_to_c"
            android:focusable="true"
            android:src="@drawable/convert" />

        <EditText
            android:id="@+id/time_minutes"
            android:layout_width="@dimen/default_box_width_large"
            android:layout_height="@dimen/default_box_height_large"
            android:layout_below="@id/minutes_label"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/double_default_margin"
            android:layout_marginEnd="@dimen/double_default_margin_large"
            android:layout_marginRight="@dimen/double_default_margin_large"
            android:background="@color/white"
            android:gravity="center"
            android:hint="@string/time_mins"
            android:importantForAutofill="no"
            android:inputType="text|numberDecimal"
            android:textColor="@color/black"
            android:textColorHint="#78909C"
            android:textSize="@dimen/default_text_size_large"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <ImageView
            android:id="@+id/menu_fluids"
            android:layout_width="@dimen/menu_button_size_large"
            android:layout_height="@dimen/menu_button_size_large"
            android:layout_below="@id/drops_per_min_microdrop"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/double_default_padding_large"
            android:layout_marginLeft="@dimen/double_default_padding_large"
            android:layout_marginTop="@dimen/double_default_padding_large"
            android:layout_marginEnd="@dimen/double_default_padding_large"
            android:layout_marginRight="@dimen/double_default_padding_large"
            android:layout_marginBottom="@dimen/double_default_padding_large"
            android:clickable="true"
            android:contentDescription="@string/menu_fluids_index"
            android:focusable="true"
            android:src="@drawable/menu_button"
            tools:ignore="UsingOnClickInXml" />

        <ImageView
            android:id="@+id/calculate_fluids"
            android:layout_width="@dimen/calculate_width_large"
            android:layout_height="@dimen/calculate_height_large"
            android:layout_below="@id/time_in_mins"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/double_default_margin_large"
            android:layout_marginBottom="@dimen/double_default_margin_large"
            android:contentDescription="@string/calculate_link"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/calculate" />


        <TextView
            android:id="@+id/mins"
            android:layout_width="@dimen/default_box_width_large"
            android:layout_height="@dimen/default_box_height_large"
            android:layout_below="@id/conversion"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/double_default_margin"
            android:layout_marginEnd="@dimen/double_default_margin"
            android:layout_marginRight="@dimen/double_default_margin"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:text="@string/number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/header_text_size_large" />


        <TextView
            android:id="@+id/hours_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hours"
            android:layout_marginStart="@dimen/double_default_margin_large"
            android:layout_marginLeft="@dimen/double_default_margin_large"
            android:layout_marginTop="@dimen/half_default_margin"
            android:text="@string/hours"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_text_size_large" />

        <TextView
            android:id="@+id/minutes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mins"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/half_default_margin"
            android:layout_marginEnd="@dimen/quad_default_margin_large"
            android:layout_marginRight="@dimen/quad_default_margin_large"
            android:text="@string/converted_time_mins"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_text_size_large" />

        <TextView
            android:id="@+id/fluids1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_margin"
            android:text="@string/fluid_calculations"
            android:textColor="@color/white"
            android:textSize="@dimen/header_text_size_large" />

        <TextView
            android:id="@+id/fluids2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fluids1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/half_default_margin"
            android:text="@string/calculations2"
            android:textColor="@color/white"
            android:textSize="@dimen/header_text_size_large" />

        <TextView
            android:id="@+id/volume_mls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fluids2"
            android:layout_marginStart="@dimen/double_default_margin_large"
            android:layout_marginLeft="@dimen/double_default_margin_large"
            android:layout_marginTop="@dimen/five_default_margin"
            android:text="@string/vol_mls"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_text_size_large" />

        <TextView
            android:id="@+id/conversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/volume_mls"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/double_default_margin"
            android:text="@string/conversion_label"
            android:textColor="@color/white"
            android:textSize="@dimen/mid_text_size_large" />


        <TextView
            android:id="@+id/time_in_mins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hours_label"
            android:layout_marginStart="@dimen/double_default_margin_large"
            android:layout_marginLeft="@dimen/double_default_margin_large"
            android:layout_marginTop="@dimen/infusions_margin"
            android:text="@string/time_in_minutes"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_text_size_large" />


        <TextView
            android:id="@+id/mls_min"
            android:layout_width="@dimen/default_box_width_large"
            android:layout_height="@dimen/default_box_height_large"
            android:layout_below="@id/calculate_fluids"
            android:layout_marginEnd="@dimen/double_default_margin_large"
            android:layout_marginRight="@dimen/double_default_margin_large"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/default_margin"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:text="@string/number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/header_text_size_large" />

        <TextView
            android:id="@+id/vol_per_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calculate_fluids"
            android:layout_marginStart="@dimen/double_default_margin_large"
            android:layout_marginLeft="@dimen/double_default_margin_large"
            android:layout_marginTop="@dimen/double_default_margin_large"
            android:text="@string/vol_per_minute"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_text_size_large" />


        <TextView
            android:id="@+id/crystalloid_drops_min"
            android:layout_width="@dimen/default_box_width_large"
            android:layout_height="@dimen/default_box_height_large"
            android:layout_below="@id/mls_min"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/double_default_margin"
            android:layout_marginEnd="@dimen/double_default_margin_large"
            android:layout_marginRight="@dimen/double_default_margin_large"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:text="@string/number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/header_text_size_large" />

        <TextView
            android:id="@+id/drops_per_min_crystalloid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vol_per_min"
            android:layout_marginStart="@dimen/double_default_margin_large"
            android:layout_marginLeft="@dimen/double_default_margin_large"
            android:layout_marginTop="@dimen/quad_default_margin"
            android:text="@string/drops_crystalloid"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_text_size_large" />

        <TextView
            android:id="@+id/colloid_drops_min"
            android:layout_width="@dimen/default_box_width_large"
            android:layout_height="@dimen/default_box_height_large"
            android:layout_below="@id/crystalloid_drops_min"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/double_default_margin"
            android:layout_marginEnd="@dimen/double_default_margin_large"
            android:layout_marginRight="@dimen/double_default_margin_large"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:text="@string/number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/header_text_size_large" />


        <TextView
            android:id="@+id/drops_per_min_colloid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drops_per_min_crystalloid"
            android:layout_marginStart="@dimen/double_default_margin_large"
            android:layout_marginLeft="@dimen/double_default_margin_large"
            android:layout_marginTop="@dimen/tri_default_margin_large"
            android:text="@string/drops_colloid"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_text_size_large" />

        <TextView
            android:id="@+id/microdrop_textview"
            android:layout_width="@dimen/default_box_width_large"
            android:layout_height="@dimen/default_box_height_large"
            android:layout_below="@id/colloid_drops_min"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="@dimen/double_default_margin_large"
            android:layout_marginRight="@dimen/double_default_margin_large"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:text="@string/number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/header_text_size_large" />

        <TextView
            android:id="@+id/drops_per_min_microdrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drops_per_min_colloid"
            android:layout_marginStart="@dimen/double_default_margin_large"
            android:layout_marginLeft="@dimen/double_default_margin_large"
            android:layout_marginTop="@dimen/quad_default_margin"
            android:text="@string/drops_microdrop"
            android:textColor="@color/white"
            android:textSize="@dimen/standard_text_size_large" />

    </RelativeLayout>

</ScrollView>

